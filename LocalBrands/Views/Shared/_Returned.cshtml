@model IEnumerable<LocalBrands.Models.Order_Item>


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary" style="text-align:center;">Returning Items</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Date Accepted</th>
                        <th>Return Reason</th>
                        <th></th>

                    </tr>
                </thead>
                
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Item.Name)</td>
                            <td>@Html.DisplayNameFor(model => model.date_accepted)</td>
                            <td> @Html.DisplayNameFor(model => model.ReturnReason)</td>
                            <td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a href="@Url.Action("Accept","Admin", new { id = item.Order_Item_id})" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">
                                        Details
                                    </a>
                                    <a href="@Url.Action("Decline","Admin", new { id = item.Order_Item_id})" class="d-none d-sm-inline-block btn btn-sm btn-danger shadow-sm">
                                        Details
                                    </a>
                                }

                                <a href="@Url.Action("Details","Order_Item", new { id = item.Order_Item_id})" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                                    Details
                                </a>

                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
