@model IEnumerable<LocalBrands.Models.Category>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary" style="text-align:center;">Your Categories</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Brand Name</th>
                        <th>Category Name</th>
                        <th></th>

                    </tr>
                </thead>
                
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @Html.DisplayFor(modelItem => item.Department.Department_Name)</td>
                            <td> @Html.DisplayFor(modelItem => item.Name)</td>
                            <td>
                                
                                <a href="@Url.Action("Edit","Categories", new { id = item.Category_ID})" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">
                                    Edit
                                </a>
                                <a href="@Url.Action("Details","Categories", new { id = item.Category_ID})" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                                    Details
                                </a>
                                <a href="@Url.Action("Delete","Categories", new {id = item.Category_ID})" class="d-none d-sm-inline-block btn btn-sm btn-danger shadow-sm">
                                    Delete
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
